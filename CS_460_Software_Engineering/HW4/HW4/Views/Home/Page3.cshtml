@model HW4.Models.InvestmentCalculator
@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Terms Explained</h2>
<p>Principle: Your initial investment<br />
    Term: How often your interest is calculated<br />
    Simple Interest: Interest that is calculated based on your principle <em>only</em><br />
    Compound Interest: Interest that is calculated based on the sum of your principle and previous interest
    </p>

<h2>Investment Calculator</h2>
<form method="post">
    Principle: $<input type="number" min="0" step="0.01" name="Principle" id="principle"/><br />
    Interest Rate: <input type="number" name="Interest" id="rate"/>%<br />
    Term: <select name="Term" id="term" >
        <option value="365">Daily</option>
        <option value="52">Weekly</option>
        <option value="12">Monthly</option>
        <option value="1">Annualy</option>
    </select><br />
    Years Invested: <input type="number" name="Time" min="0" step="1" id="years"/><br />
    <input type="radio" name="Compound" value="false" checked="checked"/> Simple Interest <input type="radio" value="true" name="Compound" /> Compound Interest<br />
    <div id="errorMessage"></div>
    <input type="submit" id="submitButton" disabled/>
</form>

