<script>
        function dayOfMonth(numOfDays) {
            "use strict";
            $("#days").empty();

            var start = $(""); //what we're connecting the options to
            var opt = null;
            for (var i = 1; i <= numOfDays; i++) {
                opt = $("<option value=\"" + numOfDays + "\">").html(numOfDays);
                opt.appendTo(start);
            }

            $("#days").append(start);
        }

        $("#page1Form .year").on("change", function () {
            if ($(this).is(":empty")) {
                $(".restOfDate").css("visibility", "hidden");
                $("#submitForm").attr("disabled", "disabled");
            }
            else {
                $(".restOfDate").css("visibility", "visible");
                if ($("#submitForm").is(":disabled") && !($(".firstname").is(":empty"))) {
                    $("#submitForm").removeAttr("disabled");
                }
            }
        })

        $("#page1Form .firstname").on("change", function () {
            if ($(this).is(":empty")) {
                $("#submitForm").attr("disabled", "disabled");
            }
            else {
                if ($("#submitForm").is(":disabled") && !($(".firstname").is(":empty"))) {
                    $("#submitForm").removeAttr("disabled");
                }
            }
        })

        $("#page1Form .month").on("change", function () {
            var whichMonth = $("select option: selected").val();
            var whichYear = $(".year").val();

            if (whichMonth == 1 || whichMonth == 3 || whichMonth == 5 || whichMonth == 7 || whichMonth == 8 || whichMonth == 9 || whichMonth == 10 || whichMonth == 12) {
                dayOfMonth(31);
            }
            else if (whichMonth == 4 || whichMonth == 6 || whichMonth == 11) {
                dayOfMonth(30);
            }
            else if (whichYear % 4 === 0) {
                dayOfMonth(29);
            }
            else {
                dayOfMonth(28);
            }
        })
</script>
