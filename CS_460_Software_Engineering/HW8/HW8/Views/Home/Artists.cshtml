@model IEnumerable<HW8.Models.Artists>
@{
}

<h2>Artists</h2>
<table>
    <thead>
        <tr>
            <th>@Html.DisplayNameFor(model => model.Name)</th>
            <th>@Html.DisplayNameFor(model => model.DoB)</th>
            <th>@Html.DisplayNameFor(model => model.BirthCity)</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@Html.DisplayFor(ModelItem => item.Name)</td>
                <td>@Html.DisplayFor(ModelItem => item.DoB)</td>
                <td>@Html.DisplayFor(ModelItem => item.BirthCity)</td>
            </tr>
        }
    </tbody>
</table>

<h2>Art Works</h2>
<table>
    <thead>
        <tr>
            <th>@Html.DisplayNameFor(model => model.ArtWorks.FirstOrDefault().Title)</th>
            <th>@Html.DisplayNameFor(model => model.ArtWorks.FirstOrDefault().Artists)</th>
        </tr>
    </thead>
    <tbody>
        @foreach(var item in Model)
        {
            foreach(var subitem in item.ArtWorks)
            {
                <tr>
                    <td>@Html.DisplayFor(ModelItem => subitem.Title)</td>
                    <td>@Html.DisplayFor(ModelItem => subitem.Artists.Name)</td>
                </tr>
            }
        }
    </tbody>
</table>

<h2>Classifications</h2>
<table>
    <thead>
        <tr>
            <th>@Html.DisplayNameFor(model => model.ArtWorks.FirstOrDefault().Classifications.FirstOrDefault().ArtWorkId)</th>
            <th>@Html.DisplayNameFor(model => model.ArtWorks.FirstOrDefault().Classifications.FirstOrDefault().GenreId)</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            foreach (var subitem in item.ArtWorks)
            {
                foreach(var subsubitem in subitem.Classifications)
                {
                    <tr>
                        <td>@Html.DisplayFor(ModelItem => subsubitem.ArtWorks.Title)</td>
                        <td>@Html.DisplayFor(ModelItem => subsubitem.Genres.Name)</td>
                    </tr>
                }
            }
        }
    </tbody>
</table>
